<h1 class="text-center my-4">Author: <%= @article.user.username %></h1>
<div class="card text-center mb-4 mx-5">
  <div class="card-header">
    <%= link_to gravatar_for(@article.user), @article.user %>
  </div>
  <div class="card-body">
    <h5 class="card-title"><%= @article.title %></h5>
    <p class="card-text"><%= @article.description %></p>
    <% if @article.categories.any? %>
      <div class="my-2"><%= render @article.categories %></div>
    <% end %>
    <% if logged_in? && (@article.user == current_user || current_user.admin?) %>
      <%= link_to 'Edit', edit_article_path(@article), class: "btn btn-outline-info" %>
      <%= link_to 'Delete', article_path(@article), method: :delete, data: { confirm: 'Are you sure?', "turbo-method": :delete }, class: "btn btn-outline-danger" %>
    <% end %>
  </div>
  <div class="card-footer text-muted">
    2 days ago
  </div>
</div>
<p class="text-center">
  <%= link_to 'Return to articles listing', articles_path, class: "btn btn-primary"%>
</p>
