<%= form_with(scope: :session, url: login_path, class: "form-class p-4", local: true) do |f| %>
  <div class="mb-3">
    <div class="row">
      <div class="col-2">
        <%= f.label :email, class: "form-label text-white" , for: "exampleFormControlInput1"%>
      </div>
      <div class="col-10">
        <%= f.email_field :email, class: "form-control", id: "exampleFormControlTextarea1", placeholder: "user@example.com", value: "vic@mail.com" %>
      </div>
    </div>
  </div>
  <div class="mb-3">
    <div class="row">
      <div class="col-2">
        <%= f.label :password, class: "form-label text-white" , for: "exampleFormControlInput1"%>
      </div>
      <div class="col-10">
        <%= f.password_field :password, class: "form-control", id: "exampleFormControlTextarea1", placeholder: "Enter your password", value: "12345" %>
      </div>
    </div>
  </div>
  <div class="mb-3 text-center">
    <%= f.submit "Log in", class: "btn btn-outline-light" %>
  </div>
<% end %>
